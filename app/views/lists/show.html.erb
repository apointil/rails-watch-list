<div class="container">
  <h1><%= @list.name %></h1>
  <% @list.bookmarks.each do |bookmark| %>
  <%# faire des cards %>
  <p><%= bookmark.comment %> - <em><%= bookmark.movie.title %></em> -
  <%= link_to 'delete', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }  %></p>

  <% end %>

  <%= link_to 'Add a bookmark', new_list_bookmark_path(@list), class: "btn btn-primary"  %>
  <%= link_to 'Back to lists', lists_path, class: "btn btn-primary"  %>
</div>
