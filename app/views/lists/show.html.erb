<div class="container">
  <div class="card-category mb-4 mt-1 text-uppercase" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key %>')">
    <%= @list.name %>
  </div>
  <div class="dropdown mx-auto" style="width: 200px;">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      List Menu
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
      <%= link_to 'Back to lists', lists_path, class: "dropdown-item btn btn-primary" %>
      <%= link_to 'Add a bookmark', new_list_bookmark_path(@list), class: "dropdown-item btn btn-primary"  %>
    </div>
  </div>
  <div class="card-container d-flex p-2">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card m-2" style="width: 18rem;">
        <img class="card-img-top" src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.comment %></p>
          <%= link_to bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to 'Add a bookmark', new_list_bookmark_path(@list), class: "btn btn-primary"  %>
  <%= link_to 'Back to lists', lists_path, class: "btn btn-primary"  %>
  <%= link_to 'Delete List', list_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-warning"  %>
</div>
