<div class="container">
  <div class="card-category mb-4 mt-1" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key %>')">
    <%= @list.name %>
  </div>
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>">
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text"><%= bookmark.comment %></p>
        <%= link_to bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
      </div>
    </div>
  <% end %>

  <%= link_to 'Add a bookmark', new_list_bookmark_path(@list), class: "btn btn-primary"  %>
  <%= link_to 'Back to lists', lists_path, class: "btn btn-primary"  %>
</div>
